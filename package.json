{
  "name": "stream-overlay",
  "version": "2.0.0",
  "description": "An app to show borderless, transparent, click-through browser windows for streaming.",
  "main": "dist/main.js",
  "scripts": {
    "clean:svelte": "cd app && npm run clean",
    "clean:electron": "test -d dist && rm -r dist || true",
    "clean": "npm run clean:svelte && npm run clean:electron",
    "build:svelte": "cd app && npm run build",
    "build:electron": "tsc",
    "build": "npm run build:svelte && npm run build:electron",
    "watch": "tsc --watch",
    "start": "npm run build && electron-forge start",
    "lint": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --write --plugin-search-dir=. .",
    "package:linux": "npm run clean && npm run build && electron-builder build --x64 --linux",
    "package:windows": "npm run clean && npm run build && electron-builder build --x64 --win",
    "package:flatpak": "",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hperrin/stream-overlay.git"
  },
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "bugs": {
    "url": "https://github.com/hperrin/stream-overlay/issues"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "tslib": "^2.4.0",
    "typescript": "~4.7.3"
  },
  "dependencies": {
    "commander": "^9.3.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "appId": "com.hperrin.StreamOverlay",
    "productName": "Stream Overlay",
    "copyright": "Copyright Â© 2022 Hunter Perrin",
    "win": {},
    "squirrelWindows": {},
    "linux": {},
    "fileAssociations": [
      {
        "ext": "streamoverlay",
        "name": "Stream Overlay Config",
        "mimeType": "application/x-stream-overlay-config"
      }
    ]
  }
}
